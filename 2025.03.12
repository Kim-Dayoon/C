#include<stdio.h>
int main()
{
	char word[20];
	printf("문장을 입력하세요: ");
	gets(word); 
	int i=0;
	int count=1;
	while(word[i]!='\0')
	{
		if(word[i]==32)
		{
			count++;
		}
		i++;
	}
	printf("%d",count);
}
