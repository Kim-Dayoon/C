#include <stdio.h>
int main()
{
	int a;
	int b;
	printf("정수 입력: ");
	scanf("%d",&a);
	printf("정수 입력: ");
	scanf("%d",&b);
	if(a%2==0&&b%2==0)
	{
		printf("%d와 %d의 곱은 %d입니다. ",a,b,a*b);
	 } 
	else if(a%2==1&&b%2==1)
	{
		printf("%d와 %d의 합은 %d입니다.",a,b,a+b);
	 } 
	 else
	 {
	 	printf("%d와 %d의 차는 %d 입니다.",a,b,a-b);
	 }
}
